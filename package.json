{
  "name": "@0ffen/white-editor",
  "author": {
    "name": "subin",
    "email": "sblee.b@enki.co.kr"
  },
  "publishConfig": {
    "@0ffen:registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0ffen/white-editor.git"
  },
  "private": false,
  "license": "MIT",
  "version": "2.0.0-rc.4",
  "description": "A WYSIWYG editor and viewer built with TipTap and Tui Image Editor",
  "keywords": [
    "editor",
    "wysiwyg",
    "viewer",
    "tiptap",
    "tui-image-editor",
    "react",
    "typescript"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "scripts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./util": {
      "import": "./dist/util.js",
      "types": "./dist/util.d.ts"
    },
    "./editor": {
      "import": "./dist/editor.js",
      "types": "./dist/editor.d.ts"
    },
    "./viewer": {
      "import": "./dist/viewer.js",
      "types": "./dist/viewer.d.ts"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "rm -rf ./dist && vite build",
    "lint": "eslint ./src",
    "lint:debug": "eslint ./src --debug",
    "lint:fix": "eslint ./src --fix",
    "preview": "vite preview",
    "format": "prettier --check \"src/**/*\" --write",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "pnpm lint",
      "pnpm format"
    ]
  },
